<!--pages/become_sitter/become_sitter.wxml-->
<view class="title">Become a Sitter</view>

<view class="container-form">
  <form bindsubmit="bindSubmit" data-id = "{{id}}">

    <view class="user-input">
      <view class="text-area-wrap">
      <textarea value="{{address}}" style="input-size"placeholder="Address" class="input-height" name="address" maxlength="-1" auto-height />
      </view>
    </view>

    <view class="user-input">
      <view class="text-area-wrap">
      <textarea value="{{gender}}" style="input-size"placeholder="Gender" class="input-height" name="gender" maxlength="-1" auto-height />
      </view>
    </view>

    <view class="user-input">
      <view class="text-area-wrap">
      <textarea value="{{age}}" style="input-size"placeholder="Age" class="input-height" name="age" maxlength="-1" auto-height />
      </view>
    </view>

    <view class="user-input">
      <view class="text-area-wrap">
      <textarea value="{{service}}" style="input-size"placeholder="Services" class="input-height" name="service" maxlength="-1" auto-height />
      </view>
    </view>

    <view class="user-input"> 
      <view class="text-area-wrap">
      <textarea value="{{price}}" placeholder="Price" class="input-height" name="price" maxlength="-1" auto-height />
      </view> 
    </view>
      
    <button  form-type="submit" loading="{{loading}}">Submit</button>
  
  </form>
</view>