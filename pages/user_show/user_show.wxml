<!--pages/user_show/user_show.wxml-->
<view class="user-profile-image" style="background-image: url('https://images.unsplash.com/photo-1516386408840-d718a820a05c?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=3b0303fc2b63c761cca164d1a1330b58&auto=format&fit=crop&w=500&q=60');"></view>
<view class="user-profile">
  <view class="user-profile-content">
    <view class="user-profile-main-info">
    <view>
        <view class="user-profile-name">{{first_name}} {{last_name}}</view>
        <view class="user-profile-address">{{address}}</view>
      </view>
      <view class="user-profile-price">Â¥{{price}}/night</view>
    </view>
    <view class="user-profile-bio">{{bio}}</view>
  </view>
</view>
<view class="user-profile-reviews">
  <view class="user-profile-reviews-title">Reviews</view>
  <block wx:for="{{reviews}}" wx:key="{{item}}">
    <view class="user-profile-reviews-rating">Rating: {{item.rating}}</view>
    <view class="user-profile-reviews-content">{{item.content}}</view>
  </block>
</view> 
<view class="container-map">
  <view class="user-profile-reviews-title">Location</view>
  <view>
  <map id="map" longitude="{{user.longitude}}" latitude="{{user.latitude}}" markers="{{markers}}" style="width: 100%; height: 300px;"></map>
  </view>
  </view>

  <view><button class="button" bindtap='onClick'>Pick Me!</button></view>
