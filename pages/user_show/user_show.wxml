<view class="user-profile">
  <view class="user-profile-content">
    <view class="user-profile-main-info">
    <view>
        <view class="user-profile-name">Domingo</view>
        <view class="user-profile-address">{{address}}</view>
      </view>
      <!-- pls change this hard code -->
      <view class="user-profile-price">Â¥194/night</view>
    </view>
    <view class="user-profile-bio">{{bio}}</view>
  </view>
</view>
<view class="user-profile-reviews">
  <view class="user-profile-reviews-title">Reviews</view>
  <block wx:for="{{reviews}}" wx:key="{{item}}">
    <view class="user-profile-reviews-rating">Rating: {{item.rating}}</view>
    <view class="user-profile-reviews-content">{{item.content}}</view>
  </block>
</view>
<view class="container-map">
  <view class="user-profile-reviews-title">Location</view>
  <view>
  <map longitude="{{lg}}" latitude="{{lt}}" scale="{{sc}}" style="width: 100%; height: 300px;" markers="{{mk}}"></map>

  <map id="map" longitude="{{markers.longitude}}" latitude="{{markers.latitude}}"  style="width: 100%; height: 300px;"></map>
  </view>
  <view>{{data.longtitude}} </view>
  </view>
