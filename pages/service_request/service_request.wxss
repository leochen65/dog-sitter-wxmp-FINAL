/* pages/service_request/service_request.wxss */

.wrapper {
  background-color: rgba(0, 0, 0, 0.02);
  position: relative;
  height:1211rpx;
  width:100%;

}

.bar-owner-info {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background: white;

}

.icon {
  height: 25px;
  width: 25px;
  background-size: cover;
  margin-left: 10px;
}

.owner-details {
  margin-left: 10px;
}
.owner-name {
  font-size: 16px;
  color: rgba(0, 0, 0, 0.9);
}

.owner-address {
  font-size: 13px;
  color: rgba(0, 0, 0, 0.5);
}

.bar-request-content {
  width: 100%;
  height: 290rpx;
  background: white;
  margin-top: 10px;
  display: flex;
}

.sitter-avatar {
  background-size: cover !important;
  height: 120px;
  width: 120px;
  margin: 10px 10px;
}


.sitter-name {
  font-size: 20px;
  color: #74CFCC;
  padding-top: 5px;
  padding-bottom: 5px;
}

.request-service, .request-time {
  font-size: 16px;
  color: rgba(0, 0, 0, 0.8);
}

.container-payment-content {
  width: 100%;
  height: 200rpx;
  margin-top: 10px;
  background: white;
}

.bar-payment-amount {
  border-bottom: solid 1px rgba(0, 0, 0, 0.1);
  display: flex;
  height: 50%;
  align-items: center;
}

.subtitle {
  margin-left: 10px;
  font-size: 15px;
  color: rgba(0, 0, 0, 0.6);
  width: 20%;
}

.price {
  margin-left: 10px;
  color: #74CFCC;
  font-size: 18px;
}

.bar-payment-method {
  display: flex;
  height: 50%;
  align-items: center;
}

.payment-method {
  margin-left: 10px;
  font-size: 18px;
}

.bar-confirm {
  display: flex;
  background: white;
  width: 100%;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  bottom: 1px;
}

.total-price {
  display: flex;
}

.total-price-title {
  font-size: 18px;
  color: rgba(0, 0, 0, 0.8);
  margin-left:11px;
}

.request-btn {
  background: #74CFCC;
  color: white;
  padding: 10px 25px;

}

