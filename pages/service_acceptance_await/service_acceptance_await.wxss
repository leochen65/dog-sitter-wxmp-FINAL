/* pages/service_request/service_request.wxss */

.wrapper {
  background-color: rgba(0, 0, 0, 0.02);
  position: relative;
  height:1211rpx;
  width:100%;

}

.bar-owner-info {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background: white;

}

.icon {
  height: 25px;
  width: 25px;
  background-size: cover;
  margin-left: 10px;
}

.owner-details {
  margin-left: 10px;
}
.owner-name {
  font-size: 16px;
  color: rgba(0, 0, 0, 0.9);
}

.owner-address {
  font-size: 13px;
  color: rgba(0, 0, 0, 0.5);
}

.bar-request-content {
  width: 100%;
  height: 290rpx;
  background: white;
  margin-top: 10px;
  display: flex;
}

.sitter-avatar {
  background-size: cover !important;
  height: 120px;
  width: 120px;
  margin: 10px 10px;
}


.sitter-name {
  font-size: 20px;
  color: #74CFCC;
  padding-top: 5px;
  padding-bottom: 5px;
}

.request-service, .request-time {
  font-size: 16px;
  color: rgba(0, 0, 0, 0.8);
}

.bar-confirmation {
  height: 600rpx;
  background: white;
  text-align: center;
  margin-top: 10px;
  align-items: center;
  padding-top: 50px;
}

.confirmation-title {
  color: #74CFCC;
  font-size: 24px;

}

.confirmation-message {
  color: rgba(0, 0, 0, 0.5);
  font-size: 16px;
}