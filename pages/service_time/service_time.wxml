<!--pages/service_time/service_time.wxml-->
<view class="banner-service" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('https://images.unsplash.com/photo-1513738781020-f0109e72554f?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=fc01cf9a021520910574e59d8d689767&auto=format&fit=crop&w=500&q=60');">
</view>
<view class="service-container">
  <view class='h2'>When will you need the serivce?</view>
  <view>{{categories}}</view>
  <view class="section">
    <picker mode="date" value="{{date}}" start="2018-07-01" end="2020-09-01" bindchange="bindDateChangeStart">
      <view class="picker">
        Start from: {{date1}}
      </view>
    </picker>
  </view>
  <view class="section">
    <picker mode="date" value="{{date}}" start="2018-07-01" end="2020-09-01" bindchange="bindDateChangeEnd">
      <view class="picker">
        Ending: {{date2}}
      </view>
    </picker>
  </view>
</view>
<view class="btn">
  <button bindtap = "buttonClickedBack">Back</button>
  <button bindtap = "buttonClickedNext">Next</button>
</view>