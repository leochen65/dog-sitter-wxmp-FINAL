/* pages/user_profile/user_profile.wxss */
.button {
  width: 40%;
  font-weight: 700;
  letter-spacing: 1px;
  text-transform: uppercase;
  order: 2px solid #0099cc;
  color: white;
  background: #74CFCC;
  font-size:15px;
  margin-top: 15px;
  margin-bottom: 15px;
}

.avatar {
  position: relative;
}

.img-avatar-pencil {
  position: absolute;
  height: 20px;
  width: 20px;
  bottom: 4px;
  right: 1rpx;
  padding-bottom: 2px;
}

.title {
  font-size: 48rpx;
  text-align: center;
  margin: 20rpx auto;
  letter-spacing: 2px;
}

.header-img {
  height: 20px;
  width: 20px;
  margin-bottom: 20px;
  margin-left:21px;
}

.avatar-holder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 10px;
}

.img-avatar {
  border-radius: 50%;
  height:100px;
  width:100px;
  padding-bottom:0px;
}

.image-text {
  margin-top: 15px;
  font-size: 30px;
  color: #74CFCC;

}


.options-img {
  height: 40px;
  width: 40px;
  margin-bottom: 15px;
  
}

.options-order {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin: 30px;
}

.all-options {
  display: flex;
  /* flex-direction:  column; */
  justify-content: space-around;
  align-items: center;
  text-align: center;
  margin-top: 15px;

}

.options-text {
  font-size: 15px;
}

.container-activities {
  border-top: solid 1px rgba(0,0,0,0.2);
  width: 90%;
  margin: 0 auto;
}