/* pages/user_profile/user_profile.wxss */
button {
  width: 40%;
  font-weight: 700;
  letter-spacing: 1px;
  text-transform: uppercase;
  order: 2px solid #0099cc;
  color: white;
  background: #74CFCC;
  font-size:15px;
 margin-top: 15px;
 margin-bottom: 15px;
}

.header {
  font-size: 32px;
  margin-bottom: 7.5px;
  margin-left: 15px;
/* border: 1px solid black; */
}

.header-img {
  height: 20px;
  width: 20px;
  margin-bottom: 20px;
}

.avatar-holder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.img-avatar {
 border-radius: 50%;
 height: 150px;
 width: 150px;
 padding-bottom: 5px;
}

.image-text {
  margin-top: 15px;
  font-size: 26px;
}

.img-avatar-pencil {
  position: relative;
  height: 20px;
  width: 20px;
 left: 60px;
 bottom: 5px;
}

.options-img {
  height: 40px;
  width: 40px;
  margin-bottom: 15px;
  
}

.options-order {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin: 30px;
}

.all-options {
  display: flex;
  flex-direction:  column;
  justify-content: space-between;
  align-items: center;
  margin-top: 15px;
}

.options-text {
  font-size: 15px;
}